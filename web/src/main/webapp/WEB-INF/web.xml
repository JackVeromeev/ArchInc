<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Arch Inc</display-name>


    <!-- Filter-->
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>com.netcracker.veromeev.archinc.filter.Filter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Filter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>


    <!-- Listener -->
    <listener>
        <listener-class>
            com.netcracker.veromeev.archinc.listener.Listener
        </listener-class>
    </listener>


    <!-- Servlet -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>
            com.netcracker.veromeev.archinc.controller.Controller
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/archinc</url-pattern>
    </servlet-mapping>


    <!-- Database settings -->
    <resource-ref>
        <description>DBConnection</description>
        <res-ref-name>jdbc/arch_inc</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
